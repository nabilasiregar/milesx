
<div class="listing-container">
  <div class="col-md-6 offset-md-3">
    <div class="listing-row">
    <h1 id="listing-title">Flight Details</h1>
    <%= simple_form_for(@booking) do |f|%>
    <div class="row-listing-form">
      <%= f.input :flight_number %>
      <%= f.input :class %>
<!--       add a dropdown box here for the user to select his preferred class? Or on the previous form?
 -->      <%= f.input :departure %>
      <%= f.input :arrival %>

      <div class="d-flex justify-content-center">
        <div class="form-group w-50 mr-5">
          <label for="departure" style="color: white;">Departure Date</label>
          <input type="text" readonly="readonly" name="start_date" class="form-control" id="depart-date">
        </div>
        <div class="form-group w-50">
          <label for="arrival" style="color: white;">Arrival Date</label>
          <input type="text" readonly="readonly" name="end_date" class="form-control" id="return-date">

      <div class="listing-submit-row">
      <%= f.button :submit, "Book you flight.", class: "btn-listing" %>
      </div>
   </div>
  <% end %>
    </div>
  </div>
</div>
